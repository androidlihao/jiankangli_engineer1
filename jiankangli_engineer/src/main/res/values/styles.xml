<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.


        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LeadFont" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#333333</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textSize">@dimen/px_51</item>
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
    </style>

    <style name="OrderFontHint" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/px_48</item>
    </style>

    <style name="ThemeActivity" mce_bogus="1">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/window_in</item>
        <item name="android:activityOpenExitAnimation">@anim/window_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/window_in2</item>
        <item name="android:activityCloseExitAnimation">@anim/window_out2</item>
    </style>
     <style name="dialogActivity" parent="@android:style/Theme.DeviceDefault.Dialog.Alert" tools:targetApi="lollipop_mr1">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>