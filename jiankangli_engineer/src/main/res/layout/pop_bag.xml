<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/pop_bg" >

        <TextView
            android:id="@+id/tv_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/px_15"
            android:text="空闲"
            android:textColor="#ffffff"
            android:textSize="@dimen/px_46" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_1"
            android:layout_marginLeft="@dimen/px_5"
            android:layout_marginRight="@dimen/px_5"
            android:layout_marginTop="@dimen/px_15"
            android:layout_marginBottom="@dimen/px_15"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/tv_busy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/px_25"
            android:text="繁忙"
            android:textColor="#ffffff"
            android:textSize="@dimen/px_46" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_1"
            android:layout_marginLeft="@dimen/px_5"
            android:layout_marginRight="@dimen/px_5"
            android:layout_marginTop="@dimen/px_25"
             android:layout_marginBottom="@dimen/px_15"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/tv_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            
            android:padding="@dimen/px_25"
            android:text="个人中心"
            android:textColor="#ffffff"
            android:textSize="@dimen/px_46" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_1"
            android:layout_marginLeft="@dimen/px_5"
            android:layout_marginRight="@dimen/px_5"
            android:layout_marginTop="@dimen/px_25"
             android:layout_marginBottom="@dimen/px_15"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_10"
            android:text="消息"
            android:padding="@dimen/px_15"
            android:textColor="#ffffff"
            android:textSize="@dimen/px_46" />
    </LinearLayout>

</LinearLayout>