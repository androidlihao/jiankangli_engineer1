<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="#99A8BB"/>
                <LinearLayout
                    android:id="@+id/ll_order"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_50"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_no_hint"
                            android:textColor="#3597d6"
                            android:textSize="@dimen/px_48" />

                        <TextView
                            android:id="@+id/order_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_no"
                            android:textColor="#3597d6"
                            android:textSize="@dimen/px_48" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_marginTop="@dimen/px_50"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="报  修  时 间:"
                            android:textColor="#777777"
                            android:textSize="@dimen/px_48" />

                        <TextView
                            android:id="@+id/keep_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_20"
                            android:textColor="#777777"
                            android:textSize="@dimen/px_48" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_marginTop="@dimen/px_36"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="维修工程师 :"
                            android:textColor="#777777"
                            android:textSize="@dimen/px_48" />

                        <TextView
                            android:id="@+id/fix_person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_20"
                            android:textColor="#777777"
                            android:textSize="@dimen/px_48" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_marginTop="@dimen/px_36"
                        android:orientation="horizontal" >
                        <TextView
                            android:id="@+id/tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/px_30"
                            android:text="申  请  备 件:"
                            android:textColor="#777777"
                            android:textSize="@dimen/px_48" />

                        <TextView
                            android:id="@+id/want_parts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_20"
                            android:textColor="#777777"
                            android:textSize="@dimen/px_48" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_30"
                        android:orientation="horizontal" >
                        <TextView
                            android:id="@+id/tv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/px_30"
                            android:text="故  障  种 类:"
                            android:textColor="#777777"
                            android:textSize="@dimen/px_48" />

                        <TextView
                            android:id="@+id/fault_kind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_20"
                            android:textColor="#777777"
                            android:textSize="@dimen/px_48" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_30"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_fix_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="维  修  时 间:"
                            android:textColor="#777777"
                            android:textSize="@dimen/px_48" />
                        <com.defineapp.jiankangli_engineer.view.ExpandableHeightListView
                            android:id="@+id/lv_fix_time_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:descendantFocusability="afterDescendants"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_evection_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_30"
                            android:layout_marginTop="@dimen/px_30"
                            android:text="差  旅  时 间:"
                            android:textColor="#777777"
                            android:textSize="@dimen/px_48"  />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_30"
                            android:layout_marginTop="@dimen/px_30"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_gotime_id"
                                android:layout_width="@dimen/px_500"
                                android:layout_height="wrap_content"
                                android:textColor="#777777"
                                android:textSize="@dimen/px_48"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_30"
                            android:layout_marginTop="@dimen/px_30"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_backtime_id"
                                android:layout_width="@dimen/px_500"
                                android:layout_height="wrap_content"
                                android:textColor="#777777"
                                android:textSize="@dimen/px_48"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_marginTop="@dimen/px_30"
                        android:orientation="horizontal" >
                        <TextView
                            android:id="@+id/tv5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设  备  状 态:"
                            android:textColor="#777777"
                            android:textSize="@dimen/px_48" />
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tv_device_state"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/px_20"
                                android:textColor="#777777"
                                android:textSize="@dimen/px_48"
                                android:text="正常"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <!--完成-->
                    <RelativeLayout
                        android:id="@+id/rl_done"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px_30"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_marginTop="@dimen/px_36"
                        android:orientation="horizontal"
                         >

                        <TextView
                            android:id="@+id/tv_fix_des1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="维修记录描述:"
                            android:textColor="#777777"
                            android:textSize="@dimen/px_48" />

                        <TextView
                            android:id="@+id/tv_remark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_fix_des1"
                            android:layout_marginTop="@dimen/px_30"
                            android:textColor="#777777"
                            android:textSize="@dimen/px_48" />

                        <TextView
                            android:id="@+id/creat_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/tv_remark"
                            android:textColor="#777777"
                            android:text="22222"
                            android:textSize="@dimen/px_48" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>