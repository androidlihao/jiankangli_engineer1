<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_1042"
    android:layout_height="@dimen/px_540"
    android:background="@drawable/background_button_dialog" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_55"
        android:gravity="center"
        android:text="拨打"
        android:textColor="#333333"
        android:textSize="@dimen/px_54"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_150"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/px_55"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="@dimen/px_48" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_1"
        android:layout_below="@id/tv_content"
        android:layout_marginTop="@dimen/px_50"
        android:background="#3597d6" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_30"
            android:layout_marginTop="@dimen/px_30"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="否"
            android:textColor="#3597d6"
            android:textSize="@dimen/px_51" />

        <View
            android:layout_width="@dimen/px_1"
            android:layout_height="fill_parent"
            android:background="#3597d6" />

        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_30"
            android:layout_marginTop="@dimen/px_30"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="是"
            android:textColor="#3597d6"
            android:textSize="@dimen/px_51" />
    </LinearLayout>

</RelativeLayout>