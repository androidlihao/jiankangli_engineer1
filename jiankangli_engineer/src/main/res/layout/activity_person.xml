<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_132"
        android:background="#3597d6" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/px_30"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_60"
            android:paddingTop="@dimen/px_30"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/person_center"
            android:textColor="#ffffff"
            android:textSize="@dimen/px_57" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_head_side"
            android:layout_width="@dimen/px_300"
            android:layout_height="@dimen/px_300"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_123"
            android:background="@drawable/head_stroke" />

        <com.defineapp.jiankangli_engineer.view.RoundImage_head
            android:id="@+id/phone_pic"
            android:layout_width="@dimen/px_288"
            android:layout_height="@dimen/px_288"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_130"
            android:background="@drawable/gerenzhongxin_touxiang" />

        <TextView
            android:id="@+id/tv_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_head_side"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_66"
            android:text="@string/app_name"
            android:textColor="#3597d6"
            android:textSize="@dimen/px_57" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_person_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_51"
            android:text="15088888888"
            android:textColor="#333333"
            android:textSize="@dimen/px_48" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_msg"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_180"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginTop="@dimen/px_120"
        android:background="#ffffff"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="@dimen/px_90"
            android:layout_height="@dimen/px_90"
            android:layout_marginLeft="@dimen/px_30"
            android:background="@drawable/list_message_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_weight="1"
            android:text="@string/message"
            android:textColor="#333333"
            android:textSize="@dimen/px_51" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_30"
            android:background="@drawable/list_next" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_2" />

    <LinearLayout
        android:id="@+id/ll_set_psw"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_180"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:background="#ffffff"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="@dimen/px_90"
            android:layout_height="@dimen/px_90"
            android:layout_marginLeft="@dimen/px_30"
            android:background="@drawable/list_password_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_weight="1"
            android:text="@string/set_psw"
            android:textColor="#333333"
            android:textSize="@dimen/px_51" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_30"
            android:background="@drawable/list_next" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_2" />

    <LinearLayout
        android:id="@+id/ll_feed_back"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_180"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:background="#ffffff"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="@dimen/px_90"
            android:layout_height="@dimen/px_90"
            android:layout_marginLeft="@dimen/px_30"
            android:background="@drawable/list_feedback_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_weight="1"
            android:text="@string/feed_back"
            android:textColor="#333333"
            android:textSize="@dimen/px_51" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_30"
            android:background="@drawable/list_next" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_2" />

    <LinearLayout
        android:id="@+id/ll_about_us"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_180"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:background="#ffffff"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="@dimen/px_90"
            android:layout_height="@dimen/px_90"
            android:layout_marginLeft="@dimen/px_30"
            android:background="@drawable/list_us_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_weight="1"
            android:text="@string/about_us"
            android:textColor="#333333"
            android:textSize="@dimen/px_51" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_30"
            android:background="@drawable/list_next" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_2" />

    <LinearLayout
        android:id="@+id/ll_my_message"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_180"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:background="#ffffff"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="@dimen/px_90"
            android:layout_height="@dimen/px_90"
            android:layout_marginLeft="@dimen/px_30"
            android:background="@drawable/list_message2_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_weight="1"
            android:text="@string/my_mssage"
            android:textColor="#333333"
            android:textSize="@dimen/px_51" />

        <ImageView
            android:id="@+id/iv_msg"
            android:layout_width="@dimen/px_20"
            android:layout_height="@dimen/px_20"
            android:background="@drawable/round2"
            android:layout_marginRight="@dimen/px_60" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_30"
            android:background="@drawable/list_next" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="@dimen/px_740"
        android:layout_height="@dimen/px_120"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px_120"
        android:background="@drawable/submit_seleter"
        android:gravity="center"
        android:text="@string/login_out"
        android:textColor="#ffffff"
        android:textSize="@dimen/px_48" />

</LinearLayout>