<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_800"
    android:layout_height="wrap_content"
    android:background="@drawable/background_button_dialog"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/px_45"
        android:text="拨打电话"
        android:textColor="#333333"
        android:textSize="@dimen/px_60" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="#f1f1f1" />

    <TextView
        android:id="@+id/report_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_30"
        android:layout_marginTop="@dimen/px_30"
        android:gravity="center"
        android:padding="@dimen/px_10"
        android:text="报修人电话：13000000000"
        android:textColor="#3597d6"
        android:textSize="@dimen/px_48" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="#f1f1f1" />

    <TextView
        android:id="@+id/connect_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_30"
        android:layout_marginTop="@dimen/px_30"
        android:gravity="center"
        android:padding="@dimen/px_10"
        android:text="临时联系人：13000000000"
        android:textColor="#3597d6"
        android:textSize="@dimen/px_48" />

    <View
         android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="#f1f1f1" />

    <TextView
        android:id="@+id/find_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_30"
        android:layout_marginTop="@dimen/px_30"
        android:gravity="center"
        android:padding="@dimen/px_10"
        android:text="负责人电话：13000000000"
        android:textColor="#3597d6"
        android:textSize="@dimen/px_48" />
    <View
         android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="#f1f1f1" />

    <TextView
        android:id="@+id/tv_qx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/px_30"
        android:text="取消"
        android:textColor="#3597d6"
        android:textSize="@dimen/px_60" />

</LinearLayout>