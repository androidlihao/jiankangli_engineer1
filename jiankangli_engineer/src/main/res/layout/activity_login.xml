<com.defineapp.jiankangli_engineer.view.KeyboardListenRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:fitsSystemWindows="true"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_744"
                    android:background="@drawable/login_img" />

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="@dimen/px_330"
                    android:layout_height="@dimen/px_330"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/px_579"
                    android:background="@drawable/login_logo" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/tv_phone"
                android:textColor="#999999"
                android:textSize="@dimen/px_36" />

            <EditText
                android:id="@+id/login_et_ph"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_phone"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/px_100"
                android:layout_marginRight="@dimen/px_100"
                android:layout_marginTop="@dimen/px_30"
                android:padding="@dimen/px_15"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/phone_hint"
                android:inputType="phone"
                android:textColor="#333333"
                android:textColorHint="#d5d5d5"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/px_48" />

            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_2"
                android:layout_marginLeft="@dimen/px_100"
                android:layout_marginRight="@dimen/px_100"
                android:layout_marginTop="@dimen/px_15"
                android:background="#d5d5d5" />

            <TextView
                android:id="@+id/tv_psw"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_48"
                android:gravity="center_horizontal"
                android:text="@string/tv_psw"
                android:textColor="#999999"
                android:textSize="@dimen/px_36" />

            <EditText
                android:id="@+id/login_et_psw"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_psw"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/px_15"
                android:layout_marginLeft="@dimen/px_100"
                android:layout_marginRight="@dimen/px_100"
                android:layout_marginTop="@dimen/px_30"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/psw_hint"
                android:inputType="textPassword"
                android:textColor="#333333"
                android:textColorHint="#d5d5d5"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/px_48" />

            <View
                android:id="@+id/view_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_2"
                android:layout_marginLeft="@dimen/px_100"
                android:layout_marginRight="@dimen/px_100"
                android:layout_marginTop="@dimen/px_15"
                android:background="#d5d5d5" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:layout_marginTop="@dimen/px_120" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/bt_login"
                    android:layout_width="@dimen/px_740"
                    android:layout_height="@dimen/px_120"
                    android:layout_marginTop="@dimen/px_120"
                    android:background="@drawable/submit_seleter"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/px_48" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bt_login"
                android:layout_marginBottom="@dimen/px_30"
                android:layout_marginTop="@dimen/px_60"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forget_show"
                    android:textColor="#999999"
                    android:textSize="@dimen/px_48" />

                <TextView
                    android:id="@+id/tv_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forget_psw"
                    android:padding="@dimen/px_15"
                    android:textColor="#3597d6"
                    android:textSize="@dimen/px_48" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_up"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px_180" 
                android:visibility="gone"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_wait"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#20000000"
            android:clickable="true"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/progressBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/loading" />
        </RelativeLayout>
    </FrameLayout>

</com.defineapp.jiankangli_engineer.view.KeyboardListenRelativeLayout>