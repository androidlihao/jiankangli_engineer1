<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/px_900"
        android:layout_height="@dimen/px_700"
        android:background="@drawable/background_button_dialog"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/tv_fault_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="故障种类"
            android:textColor="#333"
            android:textSize="@dimen/px_72"
            android:layout_marginLeft="@dimen/px_310"
            android:layout_marginTop="@dimen/px_100"
            android:layout_marginBottom="@dimen/px_144"
            />
        <CheckBox
            android:id="@+id/cb_software_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软件"
            android:textSize="@dimen/px_64"
            android:textColor="#333"
            android:layout_marginLeft="@dimen/px_140"
            android:paddingLeft="@dimen/px_14"
            android:button="@drawable/backgroup_cb_seleter"
            android:layout_below="@id/tv_fault_kind"
            android:checked="false"
            />
        <CheckBox
            android:id="@+id/cb_hardware_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="硬件"
            android:textSize="@dimen/px_64"
            android:paddingLeft="@dimen/px_14"
            android:layout_below="@id/tv_fault_kind"
            android:textColor="#333"
            android:layout_marginRight="@dimen/px_140"
            android:layout_alignParentRight="true"
            android:button="@drawable/backgroup_cb_seleter"
            android:checked="false"
            />
        <Button
            android:id="@+id/btn_sortOrHard_id"
            android:layout_width="@dimen/px_300"
            android:layout_height="@dimen/px_100"
            android:text="确定"
            android:textSize="@dimen/px_64"
            android:textColor="#fafafa"
            android:layout_below="@+id/cb_hardware_id"
            android:gravity="center"
            android:background="@color/province_line_border"
            android:layout_marginTop="@dimen/px_120"
            android:layout_marginLeft="@dimen/px_310"/>
    </RelativeLayout>
</RelativeLayout>
