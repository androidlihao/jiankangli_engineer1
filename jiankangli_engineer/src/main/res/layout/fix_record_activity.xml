<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_132"
        android:background="#3597d6" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/px_30"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_60"
            android:paddingTop="@dimen/px_30"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/fix_record"
            android:textColor="#ffffff"
            android:textSize="@dimen/px_57" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_30"
            android:padding="5dp"
            android:text="保存"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ScrollView
            android:id="@+id/sc"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_order"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_50"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_no_hint"
                            android:textColor="#3597d6"
                            android:textSize="@dimen/px_48" />

                        <TextView
                            android:id="@+id/order_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_no"
                            android:textColor="#3597d6"
                            android:textSize="@dimen/px_48" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_marginTop="@dimen/px_50"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="报 修  时 间:"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_48" />

                        <TextView
                            android:id="@+id/keep_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_20"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_48" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_marginTop="@dimen/px_36"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="维修工程师 :"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_48" />

                        <TextView
                            android:id="@+id/fix_person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_20"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_48" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_marginTop="@dimen/px_36"
                        android:orientation="horizontal" >
                        <TextView
                            android:id="@+id/tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/px_30"
                            android:text="申  请  备 件:"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_48" />

                        <TextView
                            android:id="@+id/want_parts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_20"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_48" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_30"
                        android:orientation="horizontal" >
                        <TextView
                            android:id="@+id/tv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/px_30"
                            android:text="故  障  种 类:"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_48" />

                        <TextView
                            android:id="@+id/fault_kind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_20"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_48" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_fix_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:layout_marginLeft="@dimen/px_30"
                        android:text="维  修  时 间:"
                        android:textColor="#333333"
                        android:textSize="@dimen/px_48" />
                    <ListView
                        android:id="@+id/lv_fix_time_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </ListView>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_30"
                        android:layout_marginTop="@dimen/px_30"
                        android:orientation="horizontal" >
                        <TextView
                            android:id="@+id/tv5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设  备  状 态:"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_48" />
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <RadioGroup
                                android:id="@+id/radioGroup_id"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                >
                                <RadioButton
                                    android:id="@+id/rb_fault_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/px_50"
                                    android:text="故障"
                                    android:textColor="#333"
                                    android:textSize="@dimen/px_48"
                                    android:checked="true"/>
                                <RadioButton
                                    android:id="@+id/rb_part_fault_id"
                                    android:textColor="#333"
                                    android:layout_marginLeft="@dimen/px_50"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/px_48"
                                    android:text="部分故障"/>
                                <RadioButton
                                    android:id="@+id/rb_normal_id"
                                    android:textColor="#333"
                                    android:layout_marginLeft="@dimen/px_50"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/px_48"
                                    android:text="正常"/>
                            </RadioGroup>
                            <TextView
                                android:id="@+id/tv_device_state"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/px_20"
                                android:textColor="#777777"
                                android:textSize="@dimen/px_48"
                                android:visibility="gone"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rl_done"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px_30"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_30"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/tv_fix_des1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="维修记录描述:"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_48" />

                        <TextView
                            android:id="@+id/tv_remark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_fix_des1"
                            android:layout_marginTop="@dimen/px_30"
                            android:textColor="#777777"
                            android:textSize="@dimen/px_48" />

                        <TextView
                            android:id="@+id/creat_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/tv_remark"
                            android:textColor="#999999"
                            android:textSize="@dimen/px_48" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_doing"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px_30"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_marginRight="@dimen/px_30"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_fix_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px_30"
                            android:text="维修记录描述:"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_48" />

                        <EditText
                            android:id="@+id/et_remark"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/px_250"
                            android:layout_below="@id/tv_fix_des"
                            android:layout_marginTop="@dimen/px_30"
                            android:background="@drawable/background_button_w"
                            android:gravity="start"
                            android:hint="请输入内容"
                            android:padding="@dimen/px_10"
                            android:textColor="#333333"
                            android:textColorHint="#999999"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/px_48" />
                    </RelativeLayout>
                </LinearLayout>

                <com.defineapp.jiankangli_engineer.view.ExpandableHeightListView
                    android:id="@+id/ed_list_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null" />
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/rl_wait"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#20000000"
            android:clickable="true"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/progressBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/loading" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>